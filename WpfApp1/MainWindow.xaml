<Window x:Class="ПР1.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Практическая работа 1" Height="350" Width="400"
        Closing="Window_Closing">
    <Grid>
        <Image Name="functionImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="260" Height="126" Source="Ресурсы/снимок.jpg" Margin="130,205,0,0"/>
        <TextBox Name="inputTextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="160,20,0,0" ToolTip="Введите значение x"/>
        <TextBox Name="inputTextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="160,60,0,0" ToolTip="Введите значение y"/>
        <TextBox Name="resultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="160,100,0,0" IsReadOnly="True" ToolTip="Результат вычислений"/>
        <Label Content="Введите x:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0"/>
        <Label Content="Введите y:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Height="33" Margin="52,142,0,0" Click="OnCalculateClick" RenderTransformOrigin="0.986,0.651"/>
        <Button Content="Очистить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="134" Height="33" Margin="214,142,0,0" Click="OnClearClick" RenderTransformOrigin="1.512,0.726"/>
        <RadioButton Content="sh(x)" Name="shRadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,209,0,0" Width="65"/>
        <RadioButton Content="x²" Name="x2RadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,244,0,0" Width="44"/>
        <RadioButton Content="e^x" Name="exRadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,278,0,0" Width="44"/>
    </Grid>
</Window>

  